@model IEnumerable<NetCoreCRUDAjax.Models.Transaction>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(x => x.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.BeneficiaryName)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.BankName)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.TransactionDate)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Ammount)
            </th>
            <th>
                <a onclick="showModal('@Url.Action("AddOrEdit","Transaction",new { Id = 0 }, Context.Request.Scheme)', 'Nueva transacción')" class="btn btn-success text-white"><i class="fas fa-random"></i> Nueva Transacción</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AccountNumber</td>

                    <td>@item.BeneficiaryName</td>

                    <td>@item.BankName</td>

                    <td>@item.TransactionDate</td>

                    <td>@item.Ammount</td>

                    <td>
                        <div class="container text-center">
                            <div class="row">
                                <a onclick="showModal('@Url.Action("AddOrEdit","Transaction",new { Id = item.Id }, Context.Request.Scheme)', 'Editar transacción')" class="btn btn-primary text-white mr-1"><i class="fas fa-pencil-alt"></i> Editar</a>
                                <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)">
                                    <button type="submit" name="name" class="btn btn-danger"><i class="fas fa-trash"></i> Borrar</button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>